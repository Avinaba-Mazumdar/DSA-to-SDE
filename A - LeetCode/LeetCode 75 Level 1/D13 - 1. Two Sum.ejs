class Solution {
    public:
    vector<int> twoSum(vector<int> &nums, int trg){
        unordered_map<int,int> map;
        int n = nums.size();
        
        for(int i=0; i<n; i++){
            if(map.find(trg - nums[i]) != map.end())
                return {i, map[trg-nums[i]]};
            else map[nums[i]] = i;
        }
        
        return {};
    }
};