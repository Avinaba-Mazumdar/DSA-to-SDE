class Solution {
    public:
    ListNode *detectCycle(ListNode *head) {
        ListNode *slow=head, *fast=head, *ptr=head;
        
        while(fast and fast->next){
            slow = slow->next;
            fast = fast->next->next;
            if(slow == fast) break;
        }
        
        if(!fast or !fast->next) return nullptr;
        
        while(slow != ptr){
            slow = slow->next;
            ptr = ptr->next;
        }
        
        return ptr;
    }
};