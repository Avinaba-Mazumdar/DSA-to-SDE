class Solution {
    public:
    bool isIsomorphic(string s, string t) {
        unordered_map<char,int> mapS(26), mapT(26);
        int n = s.size();
        
        for(int i=0; i<n; i++){
            if(mapS[s[i]] != mapT[t[i]]) return false;
            mapS[s[i]] = i+1;
            mapT[t[i]] = i+1;
        }
        
        return true;
    }
};