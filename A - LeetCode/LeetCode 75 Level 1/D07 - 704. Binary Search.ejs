class Solution {
    public:
    int search(vector<int>&nums, int trg) {
        int left=0, right=nums.size()-1;
        
        while(left <= right){
            int mid = left + (right - left)/2;
            
            if(nums[mid] == trg) return mid;
            if(nums[mid] > trg) right = mid-1;
            else left = mid+1;
        }
        
        return -1;
    }
};