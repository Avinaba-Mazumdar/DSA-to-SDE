class Solution {
    public:
    int longestPalindrome(string s) {
        int ans = 0;
        unordered_map<char,int> map;
        bool flag = false;
        
        for(int i=0; i<s.size(); i++){
            map[s[i]]++;
        }
        
        for(auto &it : map){
            if(it.second%2){
                ans += it.second-1;
                flag = true;
            }
            else ans += it.second;
        }
        
        return flag ? ans+1 : ans;
    }
};