class Solution {
    public:
    int pivotIndex(vector<int> &nums){
        int n = nums.size();
        int prefixSum[n], suffixSum[n];
        
        prefixSum[0] = nums[0];
        suffixSum[n-1] = nums[n-1];
        
        for(int i=1; i<n; i++){
            prefixSum[i] = nums[i] + prefixSum[i-1];
            suffixSum[n-1-i] = nums[n-1-i] + suffixSum[n-i];
        }
        
        for(int i=0; i<n; i++)
            if(prefixSum[i] == suffixSum[i])
                return i;
        return -1;
    }
};
