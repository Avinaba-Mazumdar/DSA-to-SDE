class Solution {
     public:
     void moveZeroes(vector<int> &nums) {
          int zeroes = 0, n = nums.size();
          for(int it : nums) if(it == 0) zeroes++;
          
          int idx = 0;
          for(int i=0; i<n; i++){
               if(nums[i] != 0){
                    nums[idx] = nums[i];
                    idx++;
               }
          }
          
          while(zeroes--){
               nums[--n] = 0;
          }
     }
};

//TC: O(N)
//SC: O(1)